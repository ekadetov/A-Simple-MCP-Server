{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Stock Price Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/stock_price_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "uv: Install dependencies"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "test_stock_price_server.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "preLaunchTask": "uv: Install dependencies"
        }
    ]
}